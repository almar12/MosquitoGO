<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.alvaro.mosquitogo.MainActivity">


    <TextureView
        android:id="@+id/texture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/elevacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="22dp"
        android:layout_marginTop="26dp"
        android:text="Elevacion(grados): " />

    <TextView
        android:id="@+id/rotacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/elevacion"
        android:layout_alignStart="@+id/elevacion"
        android:layout_below="@+id/elevacion"
        android:text="Azimut(grados): " />

    <ImageView
        android:id="@+id/m1"
        android:layout_width="@android:dimen/app_icon_size"
        android:layout_height="@android:dimen/app_icon_size"
        android:layout_marginLeft="100px"
        android:layout_marginTop="100px"
        android:adjustViewBounds="false"
        app:srcCompat="@drawable/mosq" />
    <ImageView
        android:id="@+id/m2"
        android:layout_width="@android:dimen/app_icon_size"
        android:layout_height="@android:dimen/app_icon_size"
        android:layout_marginLeft="200px"
        android:layout_marginTop="100px"
        android:adjustViewBounds="false"
        app:srcCompat="@drawable/mosq" />
    <ImageView
        android:id="@+id/m3"
        android:layout_width="@android:dimen/app_icon_size"
        android:layout_height="@android:dimen/app_icon_size"
        android:layout_marginLeft="300px"
        android:layout_marginTop="100px"
        android:adjustViewBounds="false"
        app:srcCompat="@drawable/mosq" />

    <ImageView
        android:id="@+id/mm"

        android:layout_marginLeft="300px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="false"
        app:srcCompat="@drawable/mata_mosq"
        android:layout_marginBottom="136dp"
        android:layout_above="@+id/button2"
        android:layout_toStartOf="@+id/rotacion" />






    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp"
        android:onClick="MatarMosquito"
        android:text="APLASTAR" />


</RelativeLayout>
